{
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",

  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/assets/:path*",
      "destination": "/assets/:path*"
    },
    {
      "source": "/((?!api|assets).*)",
      "destination": "/index.html"
    }
  ],

  "functions": {
    "api/**/*.ts": {
      "maxDuration": 30
    }
  },

  "crons": [
    {
      "path": "/api/autoPostScheduled",
      "schedule": "*/15 * * * *"
    }
  ]
}
