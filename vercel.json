{
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",

  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ],

  "functions": {
    "api/**/*.ts": {
      "maxDuration": 60
    }
  },

  "crons": [
    {
      "path": "/api/autoPostScheduled",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/weeklyTrendsJob",
      "schedule": "0 0 * * 1,4"
    },
    {
      "path": "/api/cronInviteExpiry",
      "schedule": "0 13 * * *"
    },
    {
      "path": "/api/cronSendScheduledEmails",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cronFeedbackRequests",
      "schedule": "0 * * * *"
    }
  ]
}
